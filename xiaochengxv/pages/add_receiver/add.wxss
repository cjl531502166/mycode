/* pages/add_receiver/add.wxss */
@import '../pkginfo/pkginfo.wxss';
.add-receiver{
    padding-bottom: 30px;
}
.detail-info{
    margin-top: 0;
}

/* 地区选择 */
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  top:0;
  z-index: 9999;
  background: rgba(0, 0, 0, .6)
}

.citybody {
  position: absolute;
  bottom: 0px;
  background: #fff;
  border-top: 1px solid #eee;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}
.info-item textarea{
    height: 60px;
    text-align: right;
    margin-right: 30px;
}

.warn-text{
    font-size: 16px;
    padding: 10px 15px;
}

checkbox-group{
    padding:10px 15px;
    font-size: 16px;
    display: flex;
    align-items: center;
}
.translate-text{
    text-transform: capitalize;
}