/* pages/excharges/excharge.wxss */
@import '../../components/list_temp/list_item.wxss';
.search-pkg{
  padding: 10px;
}
.search-input{
  width: 100%;
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  background: #fff;
  border-radius: 4px;
  text-align: center;
}

.filter{
  height: 46px;
  line-height: 46px;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
  background: #fafafa;
}
.filter picker{
  height: 100%;
  border-left: 1px solid #ddd;
  font-size: 15px;
  text-align: center;
  flex: 1;
}
.filter picker:first-child{
  border-left: none;
}
.filter .picker{
  display: flex;
  justify-content:  space-around;
}
.pkg-list{
  background: #fff;
  padding: 15px;
  margin-top: 15px;
}
.list-head{
  font-size: 16px;
  color:#999;
  padding-bottom: 8px;
  border-bottom: 1px solid #eee;
}
.li-item-1 icon{
  margin: 4px;
}