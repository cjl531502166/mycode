/* pages/delivery/delivery.wxss */

/* 物流信息 */

.container {
    padding-bottom: 60px;
}

.delivery-suppliers {
    padding: 0 3.3%;
    background: #fff;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}

.supplier {
    display: block;
    padding: 15px 0;
    border-top: 1px solid #ddd;
}

.supplier:first-child {
    border-top: none;
}

.radio {
    font-size: 18px;
}

.item-0, .item-1 {
    font-size: 14px;
    color: #666;
    margin-top: 5px;
    padding-left: 8.5%;
}

.item-1 {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

/* 收发件人信息 */

.info {
    margin-top: 15px;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    background: #fff;
}

.info-item {
    display: flex;
    justify-content: space-between;
    padding: 10px 4%;
}

.info-item {
    border-top: 1px solid #ddd;
}

.info-item:first-child {
    border-top: none;
}

.info-item > view {
    width: 40px;
}

.info-item > text {
    display: flex;
    white-space: wrap;
    align-items: center;
    width: 64%;
    font-size: 14px;
}

.info-item > icon {
    width: 30px;
    height: 40px;
}

.send, .receive {
    height: 40px;
    border-radius: 40px;
    font-size: 20px;
    color: #fff;
}

.send text, .receive text {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.add-info {
    color: #666;
}

.send {
    background: #f9dd44;
}

.receive {
    background: #1abdff;
}

.icon-add {
    display: flex;
    color: #0d97db;
    font-size: 28px;
    align-items: center;
    justify-content: center;
}

/* 发票 */

.invoice {
    padding: 8px 15px;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    background: #fff;
    margin-top: 15px;
}

.invo-hd {
    display: flex;
    justify-content: space-between;
    font-size: 16px;
    color: #000;
    align-items: center;
}

.invo-bd {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10px auto;
}

.switch-control text {
    margin-right: 10px;
    font-weight: normal;
    color: #666;
}

.invo-bd >text {
    font-size: 14px;
}

.invo-bd icon {
    width: 30px;
}

.invo-title {
    color: #333;
    line-height: 1.2;
}

/* 包裹信息 */

.pkg-section {
    background: #fff;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}

.pkg-list {
    margin-top: 10px;
}

.pkg-info {
    padding: 0 15px;
}

.list-No {
    font-size: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.list-No >text {
    font-weight: 600;
}

.list-item {
    font-size: 14px;
    color: #666;
}

.list-item .item {
    display: flex;
    font-size: 16px;
    padding: 10px 0;
    border-bottom: 1px solid #ddd;
}

.item text {
    flex: 1;
}

/* 购买重量 */

.buy-pkg-weight {
    margin-top: 15px;
    padding: 15px;
    background: #fff;
    display: flex;
    align-items: center;
    font-size: 16px;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    flex-wrap: wrap;
}

.buy-pkg-weight input {
    flex: 1;
    text-align: right;
}

/* 订单金额 */

.order-amount {
    margin: 15px 0;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0 15px;
    font-size: 16px;
}

.order-amount text {
    font-size: 28px;
    color: #f46b00;
}

.order-amount .currency {
    font-size: 16px;
}

/* 底部按钮 */

.ft-btn {
    position: fixed;
    z-index: 999;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.ft-btn view:first-child {
    font-size: 16px;
    color: #555;
}

.ft-btn view,.btn-contact{
    flex: 1;
    font-size: 18px;
    border-radius: 0px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px 0;
    box-sizing: border-box;
}

.btn-save, .btn-smt {
    color: #fff;
}

.btn-save {
    background: #5a90d1;
    border-right: 1px solid #fff;
}

.btn-smt {
    background: #1a81fd;
}
.btn-contact{
    line-height: 1;
    background: #fff;
}
.btn-contact::after{
    border: none;
    border-radius: none;
}
.btn-contact icon {
    font-size: 24px;
    margin-right: 6px;
}

.btn-contact:active {
    background: #f5f5f5;
}

.btn-save:active, .btn-smt:active {
    opacity: 0.9;
}

.map_container {
    position: absolute;
    top: 0;
    height: 100%;
    width: 100%;
    z-index: 999;
}

.map {
    height: 100%;
    width: 100%;
}
