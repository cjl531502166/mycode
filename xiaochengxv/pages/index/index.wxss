/**index.wxss**/
@import '../../components/newslist/newslist.wxss';
.container{
  box-sizing: border-box;
}
.search-box{
  position:relative;
}
.search-box image{
  width: 100%;
}
.err-text{
  font-size: 14px;
  color:red;
  display: block;
  position: absolute;
  bottom: 50px;
  left:10%;
}
.input-box{
  overflow: hidden;
  display: flex;
  position: absolute;
  flex-direction: row;
  width: 90%;
  left:50%;
  transform: translateX(-50%);
  top:23%;
  border-radius: 4px;
  background: #fff;
}
.input-box input{
  flex:5;
  font-size: 14px;
  height: 40px;
  padding: 0 10px;
}
.search-btn{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #63afe1;
  font-size: 24px;
  border-radius: 0;
}

.some-new{
  position: absolute;
  padding: 4px;
  right: -10px;
  top:4px;
  border-radius: 100%;
  background: red;
}
.invite{
  width: 100%;
  margin-top: 15px;
}

/*菜单  */
.menu-container{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  background: #fff;
  padding: 5.5% 15px 3% 15px;
  margin-top: 15px;
}

.m-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.4s;
}
.m-item:active{
  background: #f6f6f6;
}
.m-item image{
  width: 56%;
  margin: 6px auto;
}
.m-item text{
  font-size: 14px;
  color:#333;
}
/* 公告模块 */
.notice-container{
  background: #fff;
  padding:15px 0;
  margin-top: 15px;
}
.notice-head{
  font-size: 17px;
  padding: 0 15px 10px 15px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.notice-title{
  color:#666;
}
.notice-handle{
  color:#008ade;
}

/* 选择物流模态框 */
.dialog-alert{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask{
  position: absolute;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
}
 .dialog{
  overflow: hidden;
  position: relative;
  z-index: 999;
  background: #fff;
  width: 75%;
  border-radius: 4px;
}
.dialog-hd{
  font-size: 16px;
  color:#444;
  text-align: center;
  flex: 1;
  padding-top: 12px;
}

.radio-group{
  display: flex;
  flex-direction: column;
}
.dialog-bd{
  display: flex;
  align-items: center;
  font-size: 15px;
  padding:15px 10% 15px 10%;
  color:#333;
  max-height: 150px;
  overflow:auto;
  min-height: 80px;
}
.dialog-bd input{
  height: 36px;
  line-height: 36px;
  border:1px solid #ddd;
  border-radius: 4px;
  background: #fff;
  color:#333;
  font-size: 14px;
  padding:0 10px;
  width: 100%;
}
.dialog-bd .radio{
  padding:6px 0;
}
.dialog-ft{
  display: flex;
  text-align: center;
  font-size: 18px;
  letter-spacing: 8px;
  border-top: 1rpx solid #ddd;
}
.m-btn{
  padding: 8px 0;
  flex: 1;
  border: 1px solid transparent;
}
.confirm-btn{
  color:#4cae16;
}
.cancel-btn{
  color:#666;
}
.btn-bd-rt{
  border-right-color: #ddd;
}
.m-btn:active{
  background: #f5f5f5;
}
