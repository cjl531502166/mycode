/* components/newslist/newslist.wxss */
.list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:10px 15px;
  border-bottom: 1px solid #eee;
}
.list-item:first-child{
  border-top: none;
}
.news-title{
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size: 16px;
  color:#333;
  flex: 7;
}
.news-date{
  color:#666;
  font-size: 14px;
  flex: 3;
  text-align: right;
}