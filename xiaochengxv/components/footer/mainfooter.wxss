/* components/mainfooter.wxss */
@import '../../style/base/icon.wxss';
.m-footer-container{
  display: flex;
  bottom: 0;
  width: 100%;
  height: 10%;
  position: fixed;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #cbcaca;
  background: #fff;
}
.menu{
  display: flex;
  flex-direction: column;
  height: 80%;
  flex: 4;
  align-items: center;
  justify-content: center;
  line-height: 1.2;
}
.menu:first-child{
  border-right: 1px solid #cbcaca;
}
.home-icon,.me-icon{
  font-size: 26px;
}
.menu.on{
  color:#009aff;
}
.me-icon{
  font-weight: bold;
}
.item{
  font-size: 14px;
}